# Environment variables for production deployment
# These will be configured in AWS Amplify console

# Backend API URL - Update this with your Lightsail instance IP/domain
VITE_API_BASE_URL=https://your-lightsail-instance-ip

# Application Configuration
VITE_APP_NAME=Backgammon Tournament Manager
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

